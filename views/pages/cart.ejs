<%- include('../partials/header') %>
<div class="container mt-4">
  <h1>Your Cart</h1>
  <% if(cart.length === 0){ %>
    <p>Cart is empty</p>
  <% } else { %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td>$<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.price * item.quantity %></td>
            <td><a href="/cart/remove/<%= item.id %>" class="btn btn-danger btn-sm">Remove</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
<%- include('../partials/footer') %>
